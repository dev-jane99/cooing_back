<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0/EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

    <!-- ✅ 자동 카멜케이스 매핑 설정 -->
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true" />
    </settings>

    <!-- ✅ VO 클래스 별칭 설정 -->
    <typeAliases>
        <typeAlias type="cooing.com.site.domain.AnnouncementVO" alias="AnnouncementVO" />
        <typeAlias type="cooing.com.site.domain.ApplicationVO" alias="ApplicationVO" />
        <typeAlias type="cooing.com.site.domain.AnnouncementImageVO" alias="AnnouncementImageVO" />
    </typeAliases>

</configuration>
